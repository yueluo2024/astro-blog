---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "关于我"
const identity = {
    name: "月落无声",
    occupation: "设计师",
    hobbies: ["摄影", "美食", "旅行"]
};

const skills = ["Photoshop", "Ilustrator", "CorelDRAW"];
let isLoading = false;
let skillColor = "rgb(0, 128, 58)"
let fontWeight = "bold"
let textCase = "none"
---
<BaseLayout pageTitle={pageTitle}>
	<style
		  define:vars={{
			skillColor,
			fontWeight,
			textCase,
		  }}
		>
    /* 定义样式 */
    h1 {
      color: rgb(0, 128, 58);
      font-size: 4rem;
	  
    }
	h2 {
      margin-left: 5em;/* 导航栏的字距离左侧 */	  
    }
	p {
      margin-left: 9em;/* 导航栏的字距离左侧 */	  
    }

    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
	  text-transform: var(--textCase);
	  margin-left: 8em;/* 导航栏的字距离左侧 */
    }
        </style>
	
	<h2>一个热爱生活的摄影爱好者</h2>
	<p>月落无声：{identity.name}</p>
	<p>我是一名：{identity.occupation}</p>
	<p>我的爱好之一：{identity.hobbies[0]}</p>
	<h2>我的技术栈</h2>
	<ul>
		{skills.map((skill) => <li class="skill">{skill}</li>)}
	</ul>
	<h2>{isLoading ? "正在加载中..." : "普通状态"}</h2>
	<h2>{isLoading && "正在加载中..."}</h2>
</BaseLayout>
